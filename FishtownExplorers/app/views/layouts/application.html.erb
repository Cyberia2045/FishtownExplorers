<!DOCTYPE html>
<html>
<head>
  <title>FishtownExplorers</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
<div class="container-fluid">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
        <a class="navbar-brand" href="/">Fishtown Explorers</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

    <ul class="nav navbar-nav navbar-right">

      <% if current_user %>
        
        <li class="active"><%= link_to "The Itinerary Portal", itineraries_path %></li>

      <% else %>
      
      <li class="active"><%= link_to "Login", user_session_path %><span class="sr-only">(current)</span></a></li>

      <% end %>

      <li class="active"><a href="/explore">Explore<span class="sr-only">(current)</span></a></li>

      <% if current_user %>

      <li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete %><span class="sr-only">(current)</span></li>

      <% else %>

      <li class="active"><%= link_to "Login", user_session_path %><span class="sr-only">(current)</span></a></li>

      <% end %>

    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
</nav>

     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>

  <%= yield %>

</body>
</html>
